<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visitedCheckBox"
        android:layout_alignBottom="@+id/textView_fav_place_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Place name"
        android:id="@+id/textView_fav_place_name"
        android:layout_toLeftOf="@+id/imageView_PlacesMenu"
        android:layout_toRightOf="@+id/visitedCheckBox"
        android:paddingBottom="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="notes"
        android:id="@+id/textView_fav_notes"
        android:layout_below="@+id/textView_fav_place_name"
        android:layout_alignStart="@+id/textView_fav_place_name"
        android:layout_toLeftOf="@+id/imageView_PlacesMenu"
        android:layout_toStartOf="@+id/imageView_PlacesMenu"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@+id/textViewDistance"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_PlacesMenu"
        android:src="@drawable/ic_action_navigation_more_vert"
        android:layout_alignTop="@+id/textView_fav_place_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView_fav_notes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Miles"
        android:id="@+id/textViewDistance"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/visitedCheckBox"/>


</RelativeLayout>