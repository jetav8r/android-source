<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Window Background -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <!-- DrawerArrowStyle -->
        <item name="drawerArrowStyle">@style/DrawerArrow</item>
    </style>

    <style name="DrawerArrow" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?android:attr/colorAccent</item>
        <item name="thickness">4dp</item>
        <item name="barSize">24dp</item>
        <item name="gapBetweenBars">6dp</item>
        <item name="topBottomBarArrowSize">14dp</item>
        <item name="middleBarArrowSize">24dp</item>
        <item name="drawableSize">24dp</item>
        <item name="spinBars">true</item>
    </style>

    <style name="NavigationItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/navigation_item_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="robotoFont">Medium</item>
    </style>

    <style name="Headline">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">Bold</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@drawable/btn_text_drawable</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="robotoFont">Medium</item>
    </style>

    <style name="Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">CondensedLight</item>
    </style>

    <style name="Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="robotoFont">Regular</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#3f51b5</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
